{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:orchestrator:aiu.registry:v1",
  "title": "AIU Template Registry",
  "type": "object",
  "required": ["version", "templates"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "aiu.registry.v1"
    },
    "updatedAt": { "type": "string", "format": "date-time" },
    "currency": { "type": "string", "default": "points" },
    "templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "version", "cost", "solverSchema"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "cost": { "type": "number", "minimum": 0 },
          "tier": { "type": "string", "default": "standard" },
          "solverSchema": { "type": "string", "minLength": 1 },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "prerequisites": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "minStamina": { "type": "number", "minimum": 0 },
              "requiresLineOfSight": { "type": "boolean" },
              "requiresEnhancedObservation": { "type": "boolean" },
              "factions": {
                "type": "array",
                "items": { "type": "string" },
                "uniqueItems": true
              },
              "environmentTags": {
                "type": "array",
                "items": { "type": "string" },
                "uniqueItems": true
              }
            }
          },
          "budget": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "baseCost": { "type": "number", "minimum": 0 },
              "upkeepPerTick": { "type": "number", "minimum": 0 }
            }
          },
          "metadata": { "type": "object" }
        },
        "runtime": {
          "type": "object",
          "required": ["moduleId", "moduleKind"],
          "additionalProperties": false,
          "properties": {
            "moduleId": { "type": "integer", "minimum": 1 },
            "moduleKind": {
              "type": "string",
              "enum": [
                "random_walk",
                "explore",
                "find_exit",
                "defend_exit",
                "patrol_corridor",
                "cultivation",
                "custom"
              ]
            },
            "hooks": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "prepare": {
                  "type": "string",
                  "enum": [
                    "none",
                    "reachability:first_unvisited",
                    "reachability:nearest_exit",
                    "reachability:exit",
                    "guard_radius:hold",
                    "waypoint:sequence",
                    "cultivation:enter"
                  ]
                },
                "interpret": {
                  "type": "string",
                  "enum": [
                    "none",
                    "apply_first_step",
                    "guard_hold",
                    "follow_waypoint",
                    "cultivation:stay"
                  ]
                },
                "fallback": {
                  "type": "string",
                  "enum": ["none", "random_walk", "wait", "instinct"]
                }
              }
            }
          }
        }
      }
    }
  }
}
